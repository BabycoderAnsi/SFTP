generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())
  requestId String
  user      String?
  role      String?
  action    String
  path      String?
  status    Int
  createdAt DateTime @default(now())

  @@index([createdAt])
}

enum Role {
  READ_ONLY
  READ_WRITE
}
