generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  READ_ONLY
  READ_WRITE
  ADMIN
}

enum UserStatus {
  PENDING
  ACTIVE
  DISABLED
}

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  email     String     @unique
  password  String
  role      Role       @default(READ_ONLY)
  status    UserStatus @default(PENDING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([status])
  @@index([role])
}

model AuditLog {
  id        String   @id @default(uuid())
  requestId String
  user      String?
  role      String?
  action    String
  path      String?
  status    Int
  createdAt DateTime @default(now())

  @@index([createdAt])
}
